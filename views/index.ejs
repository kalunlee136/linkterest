<html>
<head>
  <title>Linkterest</title>
    
  <link href="../stylesheets/style.css" rel="stylesheet">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
  <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.0.0/masonry.pkgd.min.js"></script>
  <script src="http://imagesloaded.desandro.com/imagesloaded.pkgd.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <script src="/javascripts/angularRoutes.js"></script>

</head>
<body ng-app="flapperNews">
  
  <nav class="navbar navbar-default" ng-controller="NavCtrl">
    <div class="container">
      <div class="container-fluid">
        
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Linkterest</a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        
        <div class="navbar-collapse collapse ">
          <ul class="nav navbar-nav navbar-right">
            <li ng-show="isLoggedIn()"><a href="/#/link">Your linkings</a></li>
            <li ng-show="isLoggedIn()"><a ng-href="/#/profile/{{currentUserID()}}">Favorites</a></li>
            <li ng-show="isLoggedIn()"><a href="">Hello {{currentUser()}} !</a></li>   
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
          </ul>
        </div>
        
      </div>
    </div>
  </nav>
  
  <div class="row">
    <div ui-view="header"></div>
  </div>
  <div ui-view="body"></div>
  

</body>
</html>